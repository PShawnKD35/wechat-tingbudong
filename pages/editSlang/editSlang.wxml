<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}"><view slot="content">听不懂</view></cu-custom>

 <!--copying from pages/addslang-->
 <view class="blue">
  <view class="title">{{name}}</view>
     <view class="white">
      
      <view class="form-group">
     
        <!--tag area input-->
        <view class="section__title">Select Dialect Tags</view>
          <view class="input">
            <input type="text" name="slangTag" maxlength="60" placeholder="" value="{{dialectTag}}"/>
  </view>
        <scroll-view scroll-x class="nav" scroll-with-animation scroll-left>
          <block wx:for="{{categories}}" wx:for-item="category" wx:key="category">
            <button class="cu-btn round bg-cyan df margin-sm shadow" data-dialect="{{category.dialect}}" bindtap="dialectSelect">
            <text class="cuIcon-tag"></text>{{category.dialect}}</button>
          </block>
        </scroll-view>
        <!--tag input -->
        <view class="section__title">Add New Tags</view>
          <view class="input">
            <input type="text" bindinput="slangTag" name="slangTag" maxlength="60" placeholder="" />
        </view>

        <!--uploadImage input-->
<view class="section__title">上传一个表情 </view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>


      <!--uploadImage input-->


      <!--button input-->

     <view class="padding flex flex-direction" >
        <button bindtap="editSlang" formType="submit" lang="zh_CN" class="cu-btn bg-gradual-blue margin-tb-sm lg">Enter</button>
     </view>
        
    <!--button input-->
    </view>
  </view>

</view>



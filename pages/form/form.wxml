<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}"><view slot="content">听不懂</view></cu-custom>

 <!--copying from pages/addslang-->
 <view class="blue">
  <view class="title">Enter your slang</view>
     <view class="white">
      
      <view class="form-group">
       <!--slang input-->
        <view class="section__title">A word or a sentence</view>
          <view class="input">
            <input type="text" bindinput="slangName" name="slangName" maxlength="30" placeholder="e.g 扎心了老铁" />
          </view>
    
        <!--slang input-->

     
        <!--category input-->
        <view class="section__title">Catagory and location tags</view>
          <view class="input">
            <input type="text" bindinput="definitionTag" name="definitionTag" maxlength="60" placeholder="#chinese #东北话 #流行语" />
          </view>

         <!--category input-->

  

          <!--definition input-->
        <view class="section__title">Definition</view>
          <view class="input">
            <textarea bindinput="definitionContent" name="definitionContent" placeholder="扎心了！老铁 是一句网络流行语，“老铁”是东北的方言，意思是好朋友，而这句话完整的意思可能为某件事情很让你触动，引起了你比较感动或者是悲伤的情感因素的变化，被称之为“扎心了。" />
          </view>
    
        <!--definition input-->

        <!--uploadImage input-->
<view class="section__title">上传一个表情 </view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

      <!--uploadImage input-->
    

      <!--button input-->

     <view class="padding flex flex-direction" >
        <button bindtap="submitNewSlang" formType="submit" lang="zh_CN" class="cu-btn bg-gradual-blue margin-tb-sm lg">Enter</button>
     </view>
        
    <!--button input-->
    </view>
  </view>

</view>



<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='/images/logo2.png'mode="aspectFill"></image>
        </view>
 
    
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
 
        <button class='bottom' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            Enter
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>

 

<view wx:else>
    <van-search value="{{ value }}" shape ="round" background="#415F77" placeholder="请输入搜索关键词" />
    <view class="containter">
    </view>
  
</view>

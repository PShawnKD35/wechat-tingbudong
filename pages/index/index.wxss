@font-face {
  font-family: 'youth';
  src: url('https://img.yzcdn.cn/vant/vant-icon-76f274.ttf') format('truetype');
}

.header {
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 100%;
    height: 500rpx;
    line-height: 450rpx;
    background: linear-gradient(110deg, #0081ff, #1cbbb4);
}
 
.header image {
  margin-left:15rpx;
  padding-top: 123rpx;
    width: 500rpx;
    height: 250rpx;
}

.image {
  width:200rpx;
  height:100rpx;
}

/* actual index */
.popular-card {
  height: 300rpx;
  margin: 5rpx;
  background: lightgray;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
}

#banner {
  font-size: 70rpx;
  font-family: helvetica;
  font-style: bold;
  justify-content: space-around
}

#button-swiper {
  height: 120rpx;
}


.van-icon {
    position:relative;
    display:inline-block;
    font:normal normal normal 14px/1 vant-icon;
    font-size:inherit;
    text-rendering:auto;
}

#show-card,
 .h1{
    font-family: Microsoft JhengHei;
    font-weight: bold;
    font-size: 45rpx !important;
    padding: 10rpx;
    padding-bottom: 0rpx;
    text-align: left;
}

#list-background {
  background: #d8f0f0 !important;
}

#list-background-searched {
  background: #f9e6d4;
}

#tag-block {
  padding-left: 15rpx;
}

.content {
text-align: center;
}

.content text {
  color:grey;
  font-family: PingFang HK;
  font-size:30rpx;
}


#definition-text {
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: black !important;
  text-align: justify;
  background: white !important;
  display: -webkit-box;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  word-wrap: break-word;
  white-space: normal !important;
  /* -webkit-line-clamp: 3; */
  -webkit-box-orient: vertical;
}

#definition-contributor {
  font-size: 20rpx;
  padding-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  text-align: left;
}

.title {
  font-family: PingFang HK;
font-weight: 500;
font-size: 90rpx;
line-height: 123rpx;
color: white;
}

#definition-swiper {
  height: 200px;
}

/* index */
.header {
    width: 100vw;
}

.image {
  width:200rpx;
  height:100rpx;
}

.popular-card {
  height: 400rpx;
  margin: 5rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
}
.gif {
  background: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
}

/* landing */
#log-in {
  height:100rpx;
}

#banner {
  font-size: 70rpx;
  font-family: helvetica;
  font-style: bold;
  justify-content: space-around
}

#button-swiper {
  height: 120rpx;
}

.van-icon {
    position:relative;
    display:inline-block;
    font:normal normal normal 14px/1 vant-icon;
    font-size:inherit;
    text-rendering:auto;
}
.van-icon-upgrade::before {
    content:"\F058";
}
.test {
    font-size:50px;
    font-family:'youth';
}



<cu-custom bgColor="bg-gradual-blue" isCustom="{{true}}"><view slot="content">听不懂</view></cu-custom>

 <!--copying from pages/addservice-->
 <view class="blue">
 <image class="head" src='https://media.giphy.com/media/l378kCHSmb5z0UNQ4/giphy.gif'></image>
  <!-- <view class="title">听不懂？</view>
  <view class="title">不要紧!</view> -->
     <view class="white">

 <!-- show avatar-->
 <view class="info">
  <view id="avatar" class="cu-avatar round xl" style="background-image:url({{userInfo.avatarUrl}});"></view>
  <view class="userinfo">
    <view class="section-title">昵称</view>
    <view class="userNickname">{{userInfo.nickName}}</view>
  </view>
 </view>
      
  <!-- start of slang card -->
  <view class="activity">我的日常动态</view>
  <swiper class="card-swiper square-dot}}" indicator-dots="true" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <block wx:for="{{slangs}}" wx:for-item="slang" wx:key="xxx">   
<!-- first loop for main-card -->
    <swiper-item data-id="{{slang.id}}" bindtap="toSlangShow" class="background radius shadow-blur" >
      <view class="h1"><text>{{slang.name}}</text>
      </view>
      <view class="p"><text>Zhā xīn le! Lǎo tiě</text></view> 
<!-- second lopp for definition -->
        </swiper-item>

      
    </block>
  </swiper>
<!-- end of slang card -->
<swiper class="card-swiper square-dot}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="1000" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">   
        <block wx:for="{{slang.definitions}}" wx:for-item="definition" wx:key="xxx">
          <swiper-item>
            <view class="cu-card dynamic">
              <view class="cu-item shadow">
              <view class="cu-list menu-avatar">
                 <text id= "edit" class="cuIcon-edit lg text-grey"        bindtap="editDefinition"></text>
                <view class="text-content" id="definition-text">{{definition.content}}</view>
                      <view class="content flex-sub">
                      <view id="definition-contributor" class="text-grey text-sm"> Contributed by {{definition.user}} 2019年12月3日
                      
                      <text id="like" bindtap="giveItaLike" class="cuIcon-like lg text-grey"        bindtap="likeDefinition">{{definition.likes}}</text>
                      </view>
                      
                  </view>
                </view>

              </view>
            </view>
          </swiper-item>   
          </block> 
        </swiper>  
    </view>
  </view>






/* sticker */
.body {
  height: 100vh;
  background: linear-gradient(45deg, #0081ff, #1cbbb4);
  text-align: center;
  background-size: cover;
  background-repeat: no-repeat;
}

/*********** tower-swiper *************/

.swiperitem image {
	width: 100%;
	display: block;
	height: 100%;
	margin: 0;
	pointer-events: none;
}



.head {
  margin:20rpx;
  width: 95vw;
  height: 100%;
}

.title {
padding-top: 30px;
font-family: PingFang HK;
font-weight: 500;
font-size: 80rpx;
line-height: 123rpx;

}


.container{
  position: relative;
}

.background{
opacity:0.9;
flex:70%;
width: 300rpx;
height: 100%;
background: white;
border-radius: 15rpx;
}

#share {
  border-radius: 0px;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;

}

#tag-block {
  margin-top: 15px;
  padding-left: 30rpx;
  text-align: left;


}

.h1 text {
  color:grey;
}
.card-content {
 margin-top: 30rpx;

}

#show-card-avatar {
  float: right;
  margin-right:30rpx;
}

.swiper-item {
  padding:100rpx;
  margin:30rpx;
  box-shadow: 0px 0px 15px #e8e8e8;

}

#definition-text {
  margin-bottom:10rpx;
  /* font-size: 29rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  display: block;
  line-height: 1.5em; /* a */
  max-height: 12em;
  text-align: justify;
}

.add-definition {
  margin-top: 130rpx;
  font-size: 45rpx;
}

.add-definition text {
  font-size: 45rpx;
  margin-left:10rpx;
  color: grey;
}

.top-nav {
float: left;
margin-top:10rpx;
margin-left:18rpx;
}

#edit-slang{
  font-size: 60rpx;
  margin-top:30rpx;

}

#save-slang {
  font-size: 60rpx;
}

.cu-tag{
  margin:10rpx;
}

.cu-card {
 margin-left:30rpx;

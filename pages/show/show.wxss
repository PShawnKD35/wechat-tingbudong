/* pages/show/show.wxss */
.body {
  height:100vh;
  background: linear-gradient(45deg, #0081ff, #1cbbb4);
  text-align: center;
  background-size: cover;
  background-repeat: no-repeat;
}


.head {
  margin:20rpx;
  width: 95vw;
  height: 100%;
}

.title {
padding-top: 30px;
font-family: PingFang HK;
font-weight: 500;
font-size: 80rpx;
line-height: 123rpx;

}


.container{
  position: relative;
}

.background{
  opacity:0.8;
flex:70%;
width: 300rpx;
height: 100%;
background: white;
border-radius: 15rpx;
}

#share {
  width: 100%;
  border-radius: 0px;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;

}

#tag-block {
  margin-top: 15px;
  padding-left: 30rpx;

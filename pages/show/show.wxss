
/* sticker */
.body {
  height: 100%;
  background: linear-gradient(45deg, #0081ff, #1cbbb4);
  text-align: center;
  background-size: cover;
  background-repeat: no-repeat;
}

/*********** tower-swiper *************/
	.towerswiper .toweritem {
		transform: scale(calc(0.5 + var(--index) / 10));
		margin-left: calc(var(--left) * 100rpx - 150rpx);
		z-index: var(--index);
	}

.swiperitem image {
	width: 100%;
	display: block;
	height: 100%;
	margin: 0;
	pointer-events: none;
}


.towerswiper {
	height: 420rpx;
	position: relative;
	max-width: 750rpx;
	overflow: hidden;
}

.towerswiper .toweritem {
	position: absolute;
	width: 300rpx;
	height: 380rpx;
	top: 0;
	bottom: 0;
	left: 50%;
	margin: auto;
	transition: all 0.2s ease-in 0s;
	opacity: 1;
}

.towerswiper .toweritem.none {
	opacity: 0;
}

.towerswiper .toweritem .swiperitem {
	width: 100%;
	height: 100%;
	border-radius: 6rpx;
	overflow: hidden;
}
